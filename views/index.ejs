<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>API de Star Wars</title>
</head>
<body>
    <h1>Personajes de Star Wars</h1>

    <!-- Formulario para buscar por ObjectId -->
    <form action="/searchById" method="get">
        <input type="text" name="id" placeholder="Buscar por ObjectId">
        <button type="submit">Buscar por ID</button>
    </form>

    <!-- Formulario para buscar por nombre -->
    <form action="/searchByName" method="get">
        <input type="text" name="name" placeholder="Buscar por Nombre">
        <button type="submit">Buscar por Nombre</button>
    </form>

    <!-- Formulario para obtener todos los personajes -->
    <form action="/all" method="get">
        <button type="submit">Obtener Todos los Personajes</button>
    </form>

    <!-- Mostrar mensaje de error si lo hay -->
    <% if (typeof message !== 'undefined') { %>
        <p><%= message %></p>
    <% } %>

    <!-- Lista de personajes -->
    <ul>
        <% if (data && data.length > 0) { %>
            <% data.forEach(character => { %>
                <li>
                    <strong>Nombre:</strong> <%= character.name %><br>
                    <strong>ID:</strong> <%= character._id %><br>
                    <strong>Altura:</strong> <%= character.height %> cm<br>
                    <strong>Peso:</strong> <%= character.mass %> kg<br>
                    <strong>Color de cabello:</strong> <%= character.hair_color %><br>
                    <strong>Color de piel:</strong> <%= character.skin_color %><br>
                    <strong>Color de ojos:</strong> <%= character.eye_color %><br>
                    <strong>Año de nacimiento:</strong> <%= character.birth_year %><br>
                    <strong>Género:</strong> <%= character.gender %><br>
                    <strong>Mundo natal:</strong> <%= character.homeworld %><br>
                    <strong>Especie:</strong> <%= character.species %><br><br>
                </li>
            <% }) %>
        <% } else { %>
            <p>No hay datos disponibles</p>
        <% } %>
    </ul>
</body>
</html>
