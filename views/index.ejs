<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>API de Star Wars</title>
</head>
<body>
    <h1>Personajes de Star Wars</h1>

    <!-- Formulario para buscar por ObjectId -->
    <form action="/searchById" method="get">
        <input type="text" name="id" placeholder="Buscar por ObjectId" required>
        <button type="submit">Buscar por ID</button>
    </form>

    <!-- Formulario para buscar por nombre -->
    <form action="/searchByName" method="get">
        <input type="text" name="name" placeholder="Buscar por Nombre" required>
        <button type="submit">Buscar por Nombre</button>
    </form>

    <!-- Formulario para obtener todos los personajes -->
    <form action="/all" method="get">
        <button type="submit">Obtener Todos los Personajes</button>
    </form>

    <!-- Mensaje de error si lo hay -->
    <% if (typeof message !== 'undefined' && message) { %>
        <p><%= message %></p>
    <% } %>

    <!-- Tabla para mostrar personajes -->
    <table border="1">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>ID</th>
                <th>Altura (cm)</th>
                <th>Peso (kg)</th>
                <th>Color de cabello</th>
                <th>Color de piel</th>
                <th>Color de ojos</th>
                <th>Año de nacimiento</th>
                <th>Género</th>
                <th>Mundo natal</th>
                <th>Especie</th>
            </tr>
        </thead>
        <tbody>
            <% if (data && data.length > 0) { %>
                <% data.forEach(character => { %>
                    <tr>
                        <td><%= character.name %></td>
                        <td><%= character._id %></td>
                        <td><%= character.height %></td>
                        <td><%= character.mass %></td>
                        <td><%= character.hair_color %></td>
                        <td><%= character.skin_color %></td>
                        <td><%= character.eye_color %></td>
                        <td><%= character.birth_year %></td>
                        <td><%= character.gender %></td>
                        <td><%= character.homeworld %></td>
                        <td><%= character.species %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="11">No hay datos disponibles</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
