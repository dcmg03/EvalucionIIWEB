<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>API de Star Wars</title>
</head>
<body>
    <h1>Personajes de Star Wars</h1>

    <!-- Formulario para buscar por ObjectId -->
    <form action="/searchById" method="get">
        <input type="text" name="id" placeholder="Buscar por ObjectId" required>
        <button type="submit">Buscar por ID</button>
    </form>

    <!-- Formulario para buscar por nombre -->
    <form action="/searchByName" method="get">
        <input type="text" name="name" placeholder="Buscar por Nombre" required>
        <button type="submit">Buscar por Nombre</button>
    </form>

    <!-- Formulario para obtener todos los personajes -->
    <form action="/all" method="get">
        <button type="submit">Obtener Todos los Personajes</button>
    </form>

    <!-- Mostrar mensaje de error si lo hay -->
    <% if (typeof message !== 'undefined' && message) { %>
        <p><%= message %></p>
    <% } %>

    <!-- Lista de personajes -->
    <% if (data && data.length > 0) { %>
        <% data.forEach(character => { %>
            <div class="character-info">
                <p><strong>Nombre:</strong> <%= character.name %></p>
                <p><strong>ID:</strong> <%= character._id %></p>
                <p><strong>Altura:</strong> <%= character.height %> cm</p>
                <p><strong>Peso:</strong> <%= character.mass %> kg</p>
                <p><strong>Color de cabello:</strong> <%= character.hair_color %></p>
                <p><strong>Color de piel:</strong> <%= character.skin_color %></p>
                <p><strong>Color de ojos:</strong> <%= character.eye_color %></p>
                <p><strong>Año de nacimiento:</strong> <%= character.birth_year %></p>
                <p><strong>Género:</strong> <%= character.gender %></p>
                <p><strong>Mundo natal:</strong> <%= character.homeworld %></p>
                <p><strong>Especie:</strong> <%= character.species %></p>
            </div>
        <% }) %>
    <% } else { %>
        <p>No hay datos disponibles</p>
    <% } %>
</body>
</html>
